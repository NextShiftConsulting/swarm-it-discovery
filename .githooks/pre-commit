#!/bin/bash
# Pre-commit hook to detect secrets, credentials, and AI attribution
# Prevents accidental commits of sensitive data and enforces CLAUDE.md policy
#
# INSTALLATION:
#   Option 1: git config core.hooksPath .githooks
#   Option 2: cp .githooks/pre-commit .git/hooks/pre-commit
#
# Copyright (C) 2025 Next Shift Consulting LLC

echo "Running security and policy checks..."

# Files being committed
FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$FILES" ]; then
    exit 0
fi

# =============================================================================
# 1. CREDENTIAL DETECTION PATTERNS
# =============================================================================

CREDENTIAL_PATTERNS=(
    # AWS
    'AKIA[0-9A-Z]{16}'                          # AWS Access Key ID
    'aws_secret_access_key\s*=\s*["\x27]?[A-Za-z0-9/+=]{40}'  # AWS Secret

    # OpenAI / Anthropic
    'sk-[a-zA-Z0-9]{48}'                        # OpenAI API Key
    'sk-proj-[a-zA-Z0-9]{48}'                   # OpenAI Project Key
    'sk-ant-[a-zA-Z0-9-]{95,}'                  # Anthropic API Key

    # GitHub
    'ghp_[a-zA-Z0-9]{36}'                       # GitHub Personal Access Token
    'gho_[a-zA-Z0-9]{36}'                       # GitHub OAuth Token
    'github_pat_[a-zA-Z0-9]{22}_[a-zA-Z0-9]{59}' # GitHub Fine-grained PAT

    # Other services
    'xox[baprs]-[0-9]{10,13}-[0-9]{10,13}-[a-zA-Z0-9]{24}' # Slack Token
    'AIza[0-9A-Za-z_-]{35}'                     # Google API Key
    'ya29\.[0-9A-Za-z_-]+'                      # Google OAuth Token
    'sk_live_[0-9a-zA-Z]{24}'                   # Stripe Live Key
    'sk_test_[0-9a-zA-Z]{24}'                   # Stripe Test Key
    'sq0atp-[0-9A-Za-z_-]{22}'                  # Square Access Token
    'sq0csp-[0-9A-Za-z_-]{43}'                  # Square OAuth Secret
    'hf_[a-zA-Z0-9]{34}'                        # HuggingFace Token

    # Private Keys
    '-----BEGIN RSA PRIVATE KEY-----'
    '-----BEGIN DSA PRIVATE KEY-----'
    '-----BEGIN EC PRIVATE KEY-----'
    '-----BEGIN OPENSSH PRIVATE KEY-----'
    '-----BEGIN PGP PRIVATE KEY BLOCK-----'

    # Generic patterns
    'password\s*=\s*["\x27][^"\x27]{8,}["\x27]'
    'passwd\s*=\s*["\x27][^"\x27]{8,}["\x27]'
    'secret\s*=\s*["\x27][^"\x27]{8,}["\x27]'
    'api_key\s*=\s*["\x27][^"\x27]{16,}["\x27]'
    'apikey\s*=\s*["\x27][^"\x27]{16,}["\x27]'
    'auth_token\s*=\s*["\x27][^"\x27]{16,}["\x27]'
    'access_token\s*=\s*["\x27][^"\x27]{16,}["\x27]'
)

# =============================================================================
# 2. AI ATTRIBUTION DETECTION (CLAUDE.md Policy Enforcement)
# =============================================================================

AI_ATTRIBUTION_PATTERNS=(
    'Generated with.*Claude'
    'Generated with.*claude'
    'claude\.com/claude-code'
    'Co-[Aa]uthored-[Bb]y:.*[Cc]laude'
    'Co-[Aa]uthored-[Bb]y:.*anthropic'
    'noreply@anthropic\.com'
    'AI assistance.*Claude'
    'Claude Code'
    'claude-code'
    'ü§ñ.*Claude'
    'Anthropic.*AI'
)

# File patterns to skip (binary, generated, documentation with examples, etc.)
SKIP_PATTERNS='\.pyc$|\.pyo$|\.so$|\.dll$|\.exe$|\.bin$|\.png$|\.jpg$|\.jpeg$|\.gif$|\.ico$|\.woff$|\.ttf$|\.eot$|\.pdf$|\.zip$|\.tar$|\.gz$|\.lock$|package-lock\.json$|yarn\.lock$|\.ai$|README\.md$|COMPLIANCE\.md$'

FOUND_SECRET=0
FOUND_AI_ATTRIBUTION=0

# =============================================================================
# CHECK FILES
# =============================================================================

for FILE in $FILES; do
    # Skip binary and generated files
    if echo "$FILE" | grep -qE "$SKIP_PATTERNS"; then
        continue
    fi

    # Skip if file doesn't exist (deleted)
    if [ ! -f "$FILE" ]; then
        continue
    fi

    # Check credential patterns
    for PATTERN in "${CREDENTIAL_PATTERNS[@]}"; do
        if grep -qE "$PATTERN" "$FILE" 2>/dev/null; then
            echo "‚ùå ERROR: Potential credential found in $FILE"
            echo "   Pattern: $PATTERN"
            grep -nE "$PATTERN" "$FILE" 2>/dev/null | head -3
            echo ""
            FOUND_SECRET=1
        fi
    done

    # Check AI attribution patterns (except CLAUDE.md and hook files)
    if [ "$FILE" != "CLAUDE.md" ] && ! echo "$FILE" | grep -qE '\.githooks/|\.hooks/|\.git/hooks/'; then
        for PATTERN in "${AI_ATTRIBUTION_PATTERNS[@]}"; do
            if grep -qE "$PATTERN" "$FILE" 2>/dev/null; then
                echo "‚ùå ERROR: AI attribution found in $FILE"
                echo "   Pattern: $PATTERN"
                grep -nE "$PATTERN" "$FILE" 2>/dev/null | head -3
                echo ""
                echo "   CLAUDE.md Policy: NEVER add Claude attribution"
                FOUND_AI_ATTRIBUTION=1
            fi
        done
    fi
done

# =============================================================================
# CHECK SENSITIVE FILES
# =============================================================================

SECRET_FILES=(
    '.env'
    '.env.local'
    '.env.production'
    '.env.staging'
    'credentials.json'
    'secrets.json'
    'secrets.yaml'
    'secrets.yml'
    'id_rsa'
    'id_dsa'
    'id_ecdsa'
    'id_ed25519'
    '.htpasswd'
    '.netrc'
    '.npmrc'
    '.pypirc'
    'aws_config.yaml'
)

for FILE in $FILES; do
    BASENAME=$(basename "$FILE")
    for SECRET_FILE in "${SECRET_FILES[@]}"; do
        if [ "$BASENAME" = "$SECRET_FILE" ]; then
            echo "‚ùå ERROR: Attempting to commit sensitive file: $FILE"
            FOUND_SECRET=1
        fi
    done

    # Check if file is in a keys/ directory
    if echo "$FILE" | grep -q '/keys/'; then
        # Allow exceptions
        if ! echo "$FILE" | grep -qE '(README\.md|config_manager\.py|\.template)$'; then
            echo "‚ùå ERROR: Attempting to commit file from keys/ directory: $FILE"
            FOUND_SECRET=1
        fi
    fi
done

# =============================================================================
# REPORT RESULTS
# =============================================================================

if [ $FOUND_SECRET -eq 1 ]; then
    echo ""
    echo "=========================================="
    echo "‚ùå COMMIT BLOCKED: Credentials detected"
    echo "=========================================="
    echo ""
    echo "If this is a false positive, you can:"
    echo "  1. Add the file to .gitignore"
    echo "  2. Remove the sensitive data and try again"
    echo "  3. Use 'git commit --no-verify' to bypass (NOT RECOMMENDED)"
    echo ""
    exit 1
fi

if [ $FOUND_AI_ATTRIBUTION -eq 1 ]; then
    echo ""
    echo "=========================================="
    echo "‚ùå COMMIT BLOCKED: AI attribution detected"
    echo "=========================================="
    echo ""
    echo "Per CLAUDE.md policy:"
    echo "  - NEVER add Claude attribution"
    echo "  - No 'Generated with Claude Code' messages"
    echo "  - No 'Co-Authored-By: Claude' lines"
    echo "  - No references to Claude/Anthropic in commits"
    echo ""
    echo "Please remove AI attribution and try again."
    echo ""
    exit 1
fi

echo "‚úÖ Security and policy checks passed."
exit 0
