{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": ["src/**/*", "gatsby-config.ts", "gatsby-node.ts"]
}
